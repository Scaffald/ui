{
  "name": "@scaffald/ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/scaffald-ui/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui", "next-gen"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsup",
        "cwd": "packages/scaffald-ui"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "packages/scaffald-ui/vitest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/tests/reports/coverage/beyond-ui"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome lint packages/scaffald-ui/src",
        "cwd": "."
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome lint --write packages/scaffald-ui/src",
        "cwd": "."
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/scaffald-ui"
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsup --watch",
        "cwd": "packages/scaffald-ui"
      }
    }
  }
}
